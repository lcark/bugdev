{% extends 'base.html.twig' %}

{% block head %}
<style type="text/css">
    .login-form {
        width: 340px;
        margin: 50px auto;
    }
    
    .login-form form {
        margin-bottom: 15px;
        background: #f7f7f7;
        box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
        padding: 30px;
    }
    
    .login-form h2 {
        margin: 0 0 15px;
    }
    
    .form-control,
    .btn {
        min-height: 38px;
        border-radius: 2px;
    }
    
    .btn {
        font-size: 15px;
        font-weight: bold;
    }
</style>
{% endblock %}

{% block body %}
<div class="login-form">
    <form method="POST" action="login.php" id="login" role="form">
        <h2 class="text-center">signin</h2>
        <div class="form-group">
            <input type="text" name="user" id="user" class="form-control" required placeholder="user">
        </div>
        <div class="form-group">
            <input type="password" name="passwd" id="passwd" class="form-control" required placeholder="passwd">
        </div>
        <div class="form-group">
            <select name="type" form="login" id="type" class="bootstrap-select" required>
                    <option value="normal">normal</option>
                    <option value="xml">xml</option>
                    <option value="json">json</option>
            </select>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">signin</button>
        </div>
        <div class="clearfix">
            <a href="/forgetpasswd.php" class="pull-left">forget passwd?</a>
        </div>
    </form>
</div>
{% endblock %}